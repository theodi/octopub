{
  "name": "octopub",
  "scripts": {
    "rake db:migrate"
  },
  "env": {
    "GITHUB_KEY": {
      "required": true
    },
    "GITHUB_SECRET": {
      "required": true
    },
    "GITHUB_TOKEN": {
      "required": true
    },
    "S3_BUCKET": {
      "required": true
    },
    "AWS_ACCESS_KEY_ID": {
      "required": true
    },
    "AWS_SECRET_ACCESS_KEY": {
      "required": true
    },
  },
  "formation": {
    "worker": {
      "quantity": 1
    },
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "scheduler",
    "heroku-postgresql"
  ],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ]
}
